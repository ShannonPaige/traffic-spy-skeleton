<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header bg-danger">ERROR</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div id= "error">
  <div class="jumbotron">
    <div class="panel panel-danger">
      <div class="panel-heading">
        Error
      </div>
      <div class="panel-body">
        <ul class="list-unstyled lead">

          <% if @user.nil? %>
          <li> Error: No user given.</li>


          <% elsif @payload.eventName.nil?%>
          <li > Error: No given Event Name in payload.</li>

          <% elsif !@url.nil? %>
          <li> Undefined URL </li>

          <% elsif @events.empty?%>
          <li> Your event name was not found </li>
          <a href = "/sources/<%= @user.identifier %>/events"/> index of events </a>
        </div>


          <% end %>

        </ul>
        <div class="panel-footer">
        <p class="fa fa-warning">  Uh-Oh!</p>
      </div>
    </div>
  </div>
</div>

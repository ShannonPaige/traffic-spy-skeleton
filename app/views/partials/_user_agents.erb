<div class="panel-body" id="user_agent">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Verbs Used</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                <% Payload.find_one(@user.identifier, :userAgent).each do |type_count| %>
                <tr>
                    <td><%= type_count[0] %></td>
                    <td><%= type_count[1] %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <!-- /.table-responsive -->
</div>
<!-- /.panel-body -->
